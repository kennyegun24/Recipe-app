<%= form_with model: @recipe_foods, url: recipe_recipe_foods_path do |form| %>
  <div class='formDiv'>
<h1 >Add A New Ingredient</h1>
    <div class='form'>
      <%= form.label :quantity %><br>
      <%= form.number_field :quantity, class:'formInp' %>
    </div>

    <div class='form'>
        <%= form.select(:food_id, @food.map{|f| [f.name, f.id]}) %>
    </div>

    <div>
        <%= form.hidden_field :recipe_id, value: @recipe_food.recipe_id %>
    </div>
    <%= form.submit "Click to Add Ingredient", class:'addFood' %>
  </div>
<% end %>